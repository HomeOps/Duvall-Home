# servers/roku_ip_router.conf
# Route incoming requests on port 8060 to different local ports based on client IP.

# 1) Map client IP to target backend (host:port)
map $remote_addr $roku_target {
  192.168.1.160   127.0.0.1:8061;
  192.168.1.202   127.0.0.1:8061;
  192.168.1.203   127.0.0.1:8061;
  default         127.0.0.1:8061;  # fallback (optional)
}

# 2) HTTP server listening on 8060 and proxying to the selected backend
server {
  listen 8060;
  server_name _;

  # Roku ECP is plain HTTP; no TLS here
  location / {
    proxy_http_version 1.1;
    proxy_set_header Host $host;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;

    proxy_pass http://$roku_target;
  }
}
